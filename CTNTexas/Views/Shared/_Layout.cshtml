<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/Content/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - CTN Texas</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="min-width:700px">
    <nav style="background-color:#F8F8F8; height:120px; padding-top:10px">
        <div class="container">
            <div class="row">
                <div class="col s8">
                    <img src="~/Content/images/ctnLogo.png" class="left" />
                </div>                
                <div class="col s4">                   
                    <div class="row">
                        <div class="col s12 blue-grey-text" style="line-height:24px">
                            <div class="row" style="margin-bottom: 0px">
                                <div class="col s4 center" style="line-height:24px">
                                    
                                </div>
                                <div class="col s8 center">
                                    <a href="http://facebook.com"><img src="~/Content/images/facebook.png" height="24" style="padding-right:5px" /></a>
                                    <a href="http://twitter.com"><img src="~/Content/images/twitter.png" height="24" /></a>
                                </div>
                            </div>
                        </div>
                        <div class="col s12 blue-grey-text" style="line-height:24px">(713) 484-6947</div>
                        <div class="col s12 blue-grey-text" style="line-height:24px">7080 Southwest Freeway</div>
                        <div class="col s12 blue-grey-text" style="line-height:24px">Houston TX 77074</div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()               
    </div>
    <footer class="teal lighten-1 white-text center">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - CTN Texas</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
